<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app
	xmlns="http://appengine.google.com/ns/1.0">

	<threadsafe>true</threadsafe>
	<sessions-enabled>false</sessions-enabled>
	<runtime>java8</runtime>

	<system-properties>
		<property name="java.util.logging.config.file"
			value="WEB-INF/logging.properties" />
	</system-properties>

	<!-- Define the number of idle instances -->
	<automatic-scaling>
		<min-idle-instances>0</min-idle-instances>
	</automatic-scaling>

	<static-files>
		<include path="/**.html" expiration="10m" />
		<include path="/**.css" expiration="10m" /> 
		<include path="/**.js" expiration="10m" />
		<include path="/**.jpg" expiration="10m" /> 
		<include path="/**.png" expiration="10m" /> 
	</static-files>

</appengine-web-app>